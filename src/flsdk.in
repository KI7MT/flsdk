# change ownership--------------------------------------------------------------
change_ownership() {
STEP='Change Ownership Phase'
echo ''
echo '-----------------------------------------------------'
echo -e ${C_Y}" VERIFY OWNERSHIP"${C_NC}
echo '-----------------------------------------------------'
echo ''
LOGNAME=$LOGNAME
LOGGRP=$(groups $LOGNAME | cut -d ' ' -f 3)
chown -R "$LOGNAME":"$LOGGRP" "$HOMEDIR/$APP_NAME"
echo "* Updated ownership to [ $LOGNAME ]"
}

