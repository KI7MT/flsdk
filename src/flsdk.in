# mxe setup--------------------------------------------------------------------
mxe_setup() {

dialog --clear --ok-label SELECT --nocancel --backtitle "$BACKTITLE" --title \
"$MXESETUPMSG" --menu "$MENUMSG" 14 55 20 --file "$TMPD/MXESetup.tmp" 2>"${INPUT}"

    # get input from user
    MS_SELECT=$(<"${INPUT}")

    case "${MS_SELECT}" in
    # Full MXE Install
    1)
        clear ||:
        for i in "${!mxe_setup_array[@]}"
        do
            ${mxe_setup_array[$i]}
        done 
     ;; 
    # Update Ubuntu system Packages
    2)
        clear ||:
        mxe_sys_update
        read_pause
    ;; 
    # Update MXE Packages
    3)
        clear ||:
        for i in "${!mxe_update_array[@]}"
        do 
            ${mxe_update_array[$i]}
        done
    ;; 
    4)
        clear ||:
        for i in "${!mxe_update_hamlib_array[@]}"
        do
            ${mxe_update_hamlib_array[$i]}
        done
    ;; 
    5)
        clear ||:
        wsl_sys_clean
        echo ""
        mxe_clean
        read_pause
    ;; 
    B) return 0 ;;
    esac
}

